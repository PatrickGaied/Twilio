# Segmind MVP Environment Variables
# Copy this file to .env and update with your actual values

# OpenAI API Configuration (required for AI chat feature)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Supabase Configuration (optional - only if using Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here

# Database Configuration (optional - for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/segmind

# Redis Configuration (optional - for future use)
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here
INSIGHTS_API_KEY=devkey

# ChromaDB Configuration
CHROMA_PATH=./.chroma
CHROMA_COLLECTION=events_vectors

# Application Settings
APP_ENV=development
DEBUG=true
PORT=8000
FRONTEND_URL=http://localhost:3000